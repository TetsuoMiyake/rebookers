<h1>
  <strong>Books</strong>
</h1>
<% @books.each do |book| %>
  <p><%= book.title %></p>
  <p><%= book.body %></p>
  <%= link_to 'show', book_path(book.id) %>
  <%= link_to 'edit', edit_book_path(book.id) %>
  <%= link_to 'destroy', book_path(book.id), method: :delete %>
<% end %>

<h1>
  <strong>New book</strong>
</h1>

<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
